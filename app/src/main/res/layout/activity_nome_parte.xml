<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="Consulta por Número"
    android:background="@drawable/degrade_radial"
    tools:context="com.example.diego.andamentoprocessualtjmg.ACTIVITYS.NumeroProcessoActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tribunal de 1ª Instância"
        android:textSize="50px"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:text="NOME DA PESSOA"
        android:textSize="40px"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="159dp"
        android:layout_marginBottom="64dp"
        android:layout_alignBottom="@+id/edtNome"
        android:layout_alignLeft="@+id/edtNome"
        android:layout_alignStart="@+id/edtNome" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="333dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textCapCharacters"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginBottom="380dp"
        android:text="COMARCA"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/edtNome"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/edtNome"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="50dp" />

    <ImageButton
        android:id="@+id/botao_perquisa_parte"
        android:layout_width="293dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="@drawable/custon_botao1"
        android:onClick="onClickBotaoCustomizado"
        android:pointerIcon="copy"
        android:text="Buscar"
        android:textColor="#FFFFFF"
        android:textSize="45px"
        android:textStyle="bold"
        app:srcCompat="@android:drawable/ic_search_category_default"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="345dp" />


</RelativeLayout>


